<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageIcon_list_ice_contacts"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/textView_list_ice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/imageIcon_list_ice_contacts"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/deleteIcon_list_ice_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/editIcon_list_ice_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@id/deleteIcon_list_ice_delete"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/textView_list_ice_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_list_ice_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imageIcon_list_ice_contacts"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView_list_ice_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_list_ice_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/textView_list_ice_type"
        android:layout_weight="1" />

</RelativeLayout>