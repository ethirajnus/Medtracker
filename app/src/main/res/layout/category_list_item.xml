<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/categoryImageIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/categoryImageIcon"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/editIcon"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_edit"
         />



    <TextView
        android:id="@+id/categoryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/categoryImageIcon"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/categoryReminderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/categoryCode"
        android:layout_weight="1"
        android:text="@string/categoryReminder"/>

    <Switch
        android:id="@+id/categoryReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/categoryReminderLabel"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/categoryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryCode"
        android:maxLines="3"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/categoryImageIcon"
        android:layout_weight="1"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/categoryDescription"
        android:background="@color/colorDivider" />
</RelativeLayout>