<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/consumptionImageIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/consumptionMedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/consumptionImageIcon"
        android:layout_weight="1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorSecondaryText"/>


    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/editIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@id/deleteIcon"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_edit" />


    <TextView
        android:id="@+id/consumptionLabelDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumptionMedicineName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/consumptionImageIcon"
        android:layout_weight="1"
        android:text="@string/consumedOn"
        android:textColor="@color/colorSecondaryText"/>
    <TextView
        android:id="@+id/consumptionDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumptionMedicineName"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/consumptionLabelDateTime"
        android:layout_weight="1"
        android:textColor="@color/colorSecondaryText"/>

    <TextView
        android:id="@+id/consumptionLabelQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumptionLabelDateTime"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/consumptionImageIcon"
        android:layout_weight="1"
        android:text="@string/consumptionQuantity"
        android:textColor="@color/colorSecondaryText"/>

    <TextView
        android:id="@+id/consumptionQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumptionDateTime"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/consumptionLabelQuantity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:textColor="@color/colorSecondaryText"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/consumptionQuantity"
        android:background="@color/colorDivider" />
</RelativeLayout>