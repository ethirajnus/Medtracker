<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.nus.iss.se.ft05.medipal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddOrUpdateMedicine"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddOrUpdateCategory"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ShowMedicine"
            android:parentActivityName=".activities.MainActivity">
            >
        </activity>
        <activity
            android:name=".activities.AddMeasurement"
            android:label="@string/title_activity_add_measurement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DisplayMeasurement"
            android:label="@string/title_activity_display_measurement"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>