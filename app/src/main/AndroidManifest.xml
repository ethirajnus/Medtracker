<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.nus.iss.se.ft05.medipal">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddOrUpdateMedicine"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddNewAppointment"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.EditAppointment"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.ShowAppointment"
            android:parentActivityName=".activities.MainActivity"></activity>

        <activity
            android:name=".activities.PersonalBioActivity"
            android:label="@string/title_activity_add_personalBio"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activities.AddOrUpdateCategory"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ShowMedicine"
            android:parentActivityName=".activities.MainActivity">
            >
        </activity>
        <activity
            android:name=".activities.AddMeasurement"
            android:label="@string/title_activity_add_measurement"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.DisplayMeasurement"
            android:label="@string/title_activity_display_measurement"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <service
            android:name=".Util.MedicineReminderJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false">
        </service>
        <service
            android:name=".Util.MedicineConsumptionReminderJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false">
        </service>
        <service
            android:name=".Util.AppointmentReminderJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false">
        </service>
        <service
            android:name=".Util.AppointmentReminderNotificationJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false">
        </service>
        <activity
            android:name=".activities.AddOrUpdateHealthBioActivity"
            android:parentActivityName=".activities.MainActivity" ></activity>
        <activity
            android:name=".activities.AddOrUpdateConsumption"
            android:parentActivityName=".activities.MainActivity" ></activity>

        <activity
            android:name=".activities.ICEAdditionActivity"
            android:parentActivityName=".activities.MainActivity">
        </activity>
    </application>

</manifest>